<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Online Store</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div id="header">
        <h1>Online Store</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Product/Index">Products</a></li>
                <li><a href="/Contact/Index">Contact</a></li>
                <li><a href="/Cart/index">Cart</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a href="/AdminPanel/Index">Admin panel</a></li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <form asp-controller="Account" style="position:absolute; top:0;right:0;margin-right:50px;" asp-action="Logout" method="post">
                            <h6>@User.Identity.Name</h6>
                        <button type="submit" class="">Exit from account</button>
                    </form>
                    </li>
                }
                else
                {
                    <li> <a href="/Account/Login">Login</a></li>
                }
            </ul>
        </nav>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        &copy; 2023 Online Store
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>